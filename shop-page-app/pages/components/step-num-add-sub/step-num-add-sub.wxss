/* pages/components/step-num-add-sub/step-num-add-sub.wxss */
.step-num-add-sub {
  width: 140rpx;
  height: 40rpx;
  display: flex;
  padding: 1rpx;
}
.step-num-btn {
  display: block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0;
  border-radius: 0;
  margin: 0;
  background: none!important;
}
.step-num-btn::after {
  border-radius: 0;
  border: none;
  background: none!important;
}
.step-num-input {
  display: block;
  width: 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  min-height: 40rpx;
  text-align: center;
  border: none;
  background-color: #F1F1F1;
  font-size: 24rpx;
  margin: 0 10rpx;
}